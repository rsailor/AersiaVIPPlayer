<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <item name="android:actionBarStyle">@style/ActionBar</item>
        
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>  
    </style>
    
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>
    
    <style name="Controls" parent="AppTheme">
        <item name="android:textColor">@color/music_controls_font</item>
        
    </style>
    
    <style name="NowPlaying" parent="AppTheme">
        <item name="android:textColor">@color/nowplaying_font</item>
        <item name="android:background">@color/nowplaying_bg</item>
    </style>
    
    <style name="MusicListItem" parent="AppTheme">
        <item name="android:background">@color/music_list_item_bg</item>
        <item name="android:textColor">@color/music_list_item_text</item>
    </style>
    
    <style name="MusicListItemSelected" parent="AppTheme">
        <item name="android:background">@color/music_list_item_bg_sel</item>
        <item name="android:textColor">@color/music_list_item_text_sel</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">1dp</item>
    </style>
    
    

</resources>
